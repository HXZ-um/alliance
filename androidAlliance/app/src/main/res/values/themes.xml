<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AndroidAlliance" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <!-- 展开状态的标题样式 -->
    <style name="ExpandedAppBarText" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowRadius">4.0</item>
        <item name="android:shadowDy">2.0</item>
    </style>

    <!-- 折叠状态的标题样式 -->
    <style name="CollapsedAppBarText" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Theme.AndroidAlliance" parent="Base.Theme.AndroidAlliance" />

    <style name="ShapeAppearanceOverlay.SearchBar" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomLeft">16dp</item>
        <item name="cornerSizeBottomRight">16dp</item>
    </style>

    <!-- 基础主题 -->
    <style name="Theme.IndustryApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">#1A237E</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/bar</item>
        <item name="colorSecondaryVariant">@color/background</item>
        <item name="colorOnSecondary">@android:color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@android:color/white</item>

        <!-- 底部导航样式 -->
        <item name="bottomNavigationStyle">@style/Widget.BottomNavigationView</item>
    </style>

    <!-- 底部导航自定义样式 -->
    <style name="Widget.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconSize">24dp</item>
        <item name="itemTextAppearanceActive">@style/BottomNavigationText.Active</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationText.Inactive</item>
    </style>

    <style name="BottomNavigationText.Active" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#1A237E</item>
    </style>

    <style name="BottomNavigationText.Inactive" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#9E9E9E</item>
    </style>

</resources>