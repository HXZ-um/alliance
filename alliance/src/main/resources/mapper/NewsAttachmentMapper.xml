<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.neu.alliance.mapper.NewsAttachmentMapper">

    <insert id="insert" parameterType="com.neu.alliance.entity.NewsAttachment">
        INSERT INTO news_attachment (news_id, file_name, file_url, upload_time)
        VALUES (#{newsId}, #{fileName}, #{fileUrl}, #{uploadTime})
    </insert>

    <delete id="deleteByNewsId" parameterType="long">
        DELETE FROM news_attachment WHERE news_id = #{newsId}
    </delete>

    <select id="selectByNewsId" parameterType="long" resultType="com.neu.alliance.entity.NewsAttachment">
        SELECT * FROM news_attachment WHERE news_id = #{newsId}
    </select>

    <update id="update" parameterType="com.neu.alliance.entity.NewsInfo">
        UPDATE news_info
        <set>
            <if test="title != null">title = #{title},</if>
            <if test="newsImage != null">news_image = #{newsImage},</if>
            <if test="content != null">content = #{content},</if>
            <if test="summary != null">summary = #{summary},</if>
            <if test="author != null">author = #{author},</if>
            <if test="status != null">status = #{status},</if>
            <if test="rejectReason != null">reject_reason = #{rejectReason},</if>
            <if test="deleted != null">deleted = #{deleted},</if>
            <if test="isTop != null">is_top = #{isTop},</if>
            <if test="viewCount != null">view_count = #{viewCount},</if>
            update_time = NOW()
        </set>
        WHERE id = #{id}
    </update>
    <select id="selectById" parameterType="long" resultType="com.neu.alliance.entity.NewsAttachment">
        SELECT * FROM news_attachment WHERE id = #{id}
    </select>

    <delete id="deleteById" parameterType="long">
        DELETE FROM news_attachment WHERE id = #{id}
    </delete>
</mapper>